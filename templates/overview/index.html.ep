<!DOCTYPE html>
<html lang="en">
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Needs javascript</title>

    %= asset 'qem-dashboard.js'
    %= asset 'qem-dashboard.css'

    %= javascript begin

      var globalOpenqaUrl = "<%= $c->openqa_url->path('/tests/overview') %>";
      var globalObsUrl = "<%= $c->app->config->{obs}{url} %>";
      var globalSmeltUrl = "<%= $c->app->config->{smelt}{url} %>";
      % if (config 'status') {
        var globalConfigStatus = true;
        var globalMojoStatusUrl = "<%= url_for 'mojo_status' %>";
      % } else {
        var globalConfigStatus = false;
      % }
    % end
  </head>
  <body>
    <div id="app">
      We need javascript
    </div>

    <footer class='footer'>
      <div class='container'>
        <div id='footer-legal' class="text-center">
          QEM Dashboard is maintained on
          <a href="https://github.com/openSUSE/qem-dashboard">
            GitHub.
          </a>&copy; <a href="https://suse.com">SUSE</a>.
        </div>
      </div>
    </footer>
  </body>
</html>
